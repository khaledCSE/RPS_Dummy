            color: #fff;
        }
        
    </style>
  <title>Students</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-transparent bg-transparentt">
            <a class="navbar-brand" href="#"><b class="text-light">RPS</b></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                  <a class="nav-link" href="/dashboard"><b class="text-light">Dashboard</b></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout"><b class="text-light">Logout</b></a>
                </li>
                
              </ul>
            </div>
          </nav>
    <!------------------------------------------------------------------->

    <!-- Showing Results -->
    <div class="container main">
    <h1 align="center" class="text-light">Result for <%= info[0].username %> </h1><br>
    <h3 align="center" class="text-light">Trimester: <%= info[0].trimester_id %></h3>         
    <table class="table table-bordered">
    <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Course ID</th>
      <th scope="col">Grade Point</th>
      
    </tr>
  </thead>
    </thead>
    <tbody > <% for(var i=0; i < info.length; i++) { %>
      <tr>
          <td># <%= (i+1) %></td>

          <td><%= info[i].course_id %></td>
           <td><%= info[i].grade %></td>
      </tr>
  <% } %>
        <tr>
            <td>#</td>
            <td>#</td>
            <td>GPA: <%= gpa %></td>
        </tr>
     
    </tbody>
  </table>
</div>
    <!------------------------------------------------------------------->
</body>
